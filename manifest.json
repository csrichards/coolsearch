{
    "manifest_version": 2,
    "name": "Cool Search",
    "version": "0.1",

    "description": "Allows search options to remain selectable when the old.reddit.com search field is not selected",
    
    "icons": { "128": "coolsearch.png" },
    "permissions": [
        "storage",
        "tabs",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*", "http://www.reddit.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
